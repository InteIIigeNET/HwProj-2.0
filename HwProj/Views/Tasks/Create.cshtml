@model HwProj.Models.ViewModels.TaskCreateViewModel
@{
    ViewBag.Title = "Добавить задание";
}
<br />
<div class="row">
    <div class="offset-lg-4 col-lg-4 offset-md-3 col-md-6 offset-sm-4 col-sm-8 col-12">
        @using (Html.BeginForm("Create",
            "Tasks",
            FormMethod.Post,
            new { @class = "jumbotron", @id = "register-form", role = "form" }))
        {
            <h3 class="text-center">@ViewBag.Title</h3>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = "Название задания" })
                @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.Description, new { @class = "form-control", placeholder = "Описание задания" })
                @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
            </div>
                @Html.HiddenFor(model => model.CourseId)
            <div class="form-group">
                <button class="btn btn-block btn-primary" type="submit">Добавить задание</button>
            </div>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
