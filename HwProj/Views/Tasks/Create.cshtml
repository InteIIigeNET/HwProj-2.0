@model HwProj.Models.ViewModels.TaskCreateViewModel
@{
    ViewBag.Title = "Добавить задание";
}
<br />
<div class="row">
    <div class="offset-xl-1 col-xl-10 offset-lg-1 col-lg-10 col-md-12 col-sm-12 col-12">
        @using (Html.BeginForm("Create",
            "Tasks",
            FormMethod.Post,
            new { @class = "jumbotron jumbotron_border_gray", @id = "register-form", role = "form" }))
        {
            <h3 class="text-center">@ViewBag.Title</h3>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = @Html.DisplayNameFor(t => t.Title)})
                @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.TextAreaFor(m => m.Description, new { @class = "form-control", placeholder = @Html.DisplayNameFor(t => t.Description), rows = 10 })
                @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
            </div>
                @Html.HiddenFor(model => model.CourseId)
            <div class="form-group">
                <button class="btn btn-primary" type="submit">Добавить задание</button>
            </div>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
