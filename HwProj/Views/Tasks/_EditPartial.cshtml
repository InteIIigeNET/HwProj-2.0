@using HwProj.Models.ViewModels
@using HwProj.Models.Enums
@model TaskEditViewModel

@using (Ajax.BeginForm("Edit", new AjaxOptions {UpdateTargetId = "task_partial_" + Model.TaskId}))
{
    @Html.ValidationSummary("", new {@class = "text-danger"})
    <div class="form-group">
        @Html.HiddenFor(t => t.TaskId)
        @Html.HiddenFor(t => t.CourseId)
    </div>
        <div class="form-group">
        @Html.TextBoxFor(m => m.Title, new {@class = "form-control", placeholder = @Html.DisplayNameFor(t => t.Title) })
        @Html.ValidationMessageFor(m => m.Title, "", new {@class = "text-danger"})
    </div>
    <div class="form-group">
        @Html.TextAreaFor(m => m.Description, new {@class = "form-control", placeholder = @Html.DisplayNameFor(t => t.Description), rows = 5})
        @Html.ValidationMessageFor(m => m.Description, "", new {@class = "text-danger"})
        
    </div>
    <div class="form-group">
        <input class="btn btn-outline-primary" type="submit" value="Изменить"/>
    </div>
}
