@using HwProj.Models.ViewModels
@using HwProj.Models.Enums
@model TaskEditViewModel

@using (Ajax.BeginForm("Edit", new AjaxOptions {UpdateTargetId = "task_partial_" + Model.TaskId}))
{
    @Html.ValidationSummary("", new {@class = "text-danger"})
<div class="form-group">
    @Html.HiddenFor(t => t.TaskId)
    @Html.HiddenFor(t => t.CourseId)
</div>
    <div class="form-group">
        @Html.TextBoxFor(m => m.Title, new {@class = "form-control", placeholder = "Название задания"})
        @Html.ValidationMessageFor(m => m.Title, "", new {@class = "text-danger"})
    </div>
    <div class="form-group">
        @Html.TextBoxFor(m => m.Description, new {@class = "form-control", placeholder = "Описание задания"})
        @Html.ValidationMessageFor(m => m.Description, "", new {@class = "text-danger"})
    </div>
    <div class="form-group">
        <input type="submit" value="Изменить"/>
    </div>
}
