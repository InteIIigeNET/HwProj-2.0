@using System.Security.Principal
@using HwProj.Models.Enums
@using HwProj.Models.ManagerModels
@model HwProj.Models.ManagerModels.EditViewModel

@{
    ViewBag.Title = "Редактирование профиля";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Index", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.HiddenFor(user => user.Id)
    </div>
    <div class="form-group">
        @Html.HiddenFor(user => user.Role)
    </div>
    <div class="form-group">
        @Html.LabelFor(user => user.Name, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(user => user.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(user => user.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(user => user.Surname, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(user => user.Surname, new { @class = "form-control" })
            @Html.ValidationMessageFor(user => user.Surname, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(user => user.Email, "E-Mail", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(user => user.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(user => user.Email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(user => user.NewPassword, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.PasswordFor(user => user.NewPassword, new { @class = "form-control" })
            @Html.ValidationMessageFor(user => user.NewPassword, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(user => user.ConfirmPassword, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.PasswordFor(user => user.ConfirmPassword, new { @class = "form-control" })
            @Html.ValidationMessageFor(user => user.ConfirmPassword, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(user => user.Password, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.PasswordFor(user => user.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(user => user.Password, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Сохранить" class="btn btn-default" />
        </div>
    </div>
    <p>
        @if (Model.Role != null || Model.Role == RoleType.Преподаватель.ToString())
        {
            @Html.Label(@Model.Role)
            @Html.ActionLink("@Подтвердить статус преподавалетя", "")
        }
    </p>
    <p>
        @Html.Label("Unhappy?")
        @Html.ActionLink("Удалить мой аккаунт", "Delete")
    </p>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
