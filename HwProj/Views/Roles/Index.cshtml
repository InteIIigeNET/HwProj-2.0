@{
    ViewBag.Title = "HwProj 2.0";
}

<br />
@using (Html.BeginForm("Index", 
    "Roles", 
    FormMethod.Post, 
    new { @class = "jumbotron", role = "form" }))
{
    <div class="offset-lg-1 col-lg-10 col-md-10 offset-sm-1 col-sm-10 offset-1 col-10">
        <div class="jumbotron jumbotron_border_gray">
            <h4>Развивайте HwProj. Добавьте преподавателя.</h4>
            <br />
            @Html.ValidationSummary()
            <div class="input-group mb-3">
                <input class="form-control" type="text" placeholder="Поиск по ФИО/почте пользователя" name="email" id = "searchInput" />
                <div class="input-group-append">
                    <input class="btn btn-primary" type="submit" value="Добавить" />
                </div>
            </div>
            <br />
        </div>
    </div>
}

<script src="@Url.Content("~/Scripts/jquery-3.3.1.min.js")" type="text/javascript"></script>
<link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

<script type ="text/javascript">
    $("#searchInput").autocomplete({
        source: function (request, response) {
            $.ajax({
                url: '@Url.Action("GetSearchResult","Roles")',
                dataType: "json",
                data: { search: $("#searchInput").val() },
                success: function (data) {
                    response($.map(data, function (item) {
                        return { label: item.Description, value: item.Email };
                    }));
                },
                error: function (xhr, status, error) {
                    alert("Ошибка глупого Ajax'a");
                }
            });
        }
    });
</script>
