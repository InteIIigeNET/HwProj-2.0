@using HwProj.Models.ViewModels
@using Microsoft.AspNet.Identity
@model HwProj.Models.Homework

<br />
<div class="row">
    @if (Model.StudentId == User.Identity.GetUserId() ||
         User.Identity.GetUserName() == Model.Task.Course.MentorsEmail)
    {
        @Html.LabelFor(m => m.Task.Title) @Html.ValueFor(m => m.Task.Title) <br/>
        @Html.LabelFor(m => m.Task.Description) @Html.ValueFor(m => m.Task.Description) <br />
        @Html.LabelFor(m => m.IsCompleted) @Html.ValueFor(m => m.IsCompleted) <br />
        @Html.LabelFor(m => m.ReviewComment) @Html.ValueFor(m => m.ReviewComment) <br />
        @Html.LabelFor(m => m.GitHub) @Html.ValueFor(m => m.GitHub) <br />
        if (User.Identity.GetUserName() == Model.Task.Course.MentorsEmail)
        {
            <br />
            @Html.Partial("Review", new HomeworkAcceptViewModel() { HomeworkId = @Model.Id })
        }
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


