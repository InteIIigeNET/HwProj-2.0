@model HwProj.Models.ViewModels.HomeworkCreateViewModel
@{
    ViewBag.Title = "Отправить домашнее задание";
}
<br />
<div class="row">
    <div class="offset-lg-4 col-lg-4 offset-md-3 col-md-6 offset-sm-4 col-sm-8 col-12">
        @using (Html.BeginForm("Create",
            "Homeworks",
            FormMethod.Post,
            new { @class = "jumbotron", @id = "register-form", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h3 class="text-center">@ViewBag.Title</h3>
            <hr />
            @Html.DisplayTextFor(h => h.Description)
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.TextBoxFor(m => m.GitHub, new { @class = "form-control", placeholder = @Html.DisplayTextFor(t => t.GitHub) })
                @Html.ValidationMessageFor(m => m.GitHub, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.Comment, new { @class = "form-control", placeholder = @Html.DisplayTextFor(t => t.GitHub) })
            </div>
            <div class="form-group">
                <button class="btn btn-block btn-primary" type="submit">Отправить</button>
            </div>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

