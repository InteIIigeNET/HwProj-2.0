@model HwProj.Models.ViewModels.HomeworkAcceptViewModel

<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        @using (Html.BeginForm("AcceptHomework",
            "Homeworks",
            FormMethod.Post,
            new { @id = "register-form", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.TextAreaFor(m => m.ReviewComment, new { @class = "form-control", placeholder = @Html.DisplayNameFor(m => m.ReviewComment), rows = 5 })
                @Html.ValidationMessageFor(m => m.ReviewComment, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.CheckBoxFor(model => model.IsAccepted, new { @checked = false, placeholder = @Html.DisplayNameFor(m => m.IsAccepted) })
                @Html.LabelFor(m => m.IsAccepted)
            </div>
            <div class="form-group">
                @Html.HiddenFor(m => m.HomeworkId)
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">Отправить</button>
            </div>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
