@model HwProj.Models.ViewModels.ForgotPasswordViewModel
@{
    ViewBag.Title = "Восстановление пароля";
}

<br />
<div class="row">
    <div class="offset-lg-4 col-lg-4 offset-md-3 col-md-6 offset-sm-4 col-sm-8 col-12">
        @using (Html.BeginForm("ForgotPassword", 
                               "Account", 
                               FormMethod.Post, 
                               new { @class = "jumbotron", @id = "forgot-password-form", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4 class="text-center">@ViewBag.Title</h4>
            <hr />
            <p class="text-center text-small text-muted">
                Введите адрес своей электронной почты, чтобы получить письмо с ссылкой для восстановления пароля
            </p>
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = Html.DisplayNameFor(m => m.Email)})
            </div>
            <div class="form-group">
                <button class="btn btn-block btn-primary" type="submit">Сбросить пароль</button>
            </div>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
