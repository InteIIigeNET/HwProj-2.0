@model HwProj.Models.ViewModels.ExternalLoginConfirmationViewModel
@{
    ViewBag.Title = "Регистрация";
}

<br />
<div class="row">
    <div class="offset-lg-4 col-lg-4 offset-md-3 col-md-6 offset-sm-4 col-sm-8 col-12">
        @using (Html.BeginForm("ExternalLoginConfirmation", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "jumbotron jumbotron_border_gray", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4 class="text-center">@ViewBag.Title</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <p class="text-primary text-center">
                Вы успешно прошли проверку подлинности через <strong>@ViewBag.LoginProvider</strong>.
                <br />
                Введите имя и фамилию, чтобы завершить регистрацию.
            </p>
            <div class="form-group">
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = Html.DisplayNameFor(m => m.Name) })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Surname, new { @class = "form-control", placeholder = Html.DisplayNameFor(m => m.Surname) })
                    @Html.ValidationMessageFor(m => m.Surname, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = Html.DisplayNameFor(m => m.Email) })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-block btn-primary" value="Зарегистрироваться" />
            </div>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
