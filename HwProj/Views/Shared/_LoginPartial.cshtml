@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "ml-auto" }))
    {
  
        <ul class="navbar-nav">
            <li class="nav-item">
                @Html.ActionLink("Курсы", "Index", "Courses", routeValues: null, htmlAttributes: new { title = "Courses", @class = "nav-link"})
            </li>
            <li class="nav-item">
                @Html.ActionLink("Профиль", "Index", "Manage", routeValues: null, htmlAttributes: new {title = "Manage", @class = "nav-link"})
            </li>
              @Html.AntiForgeryToken()
            <li class="nav-item">
                <a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">Выйти</a>
            </li>
        </ul>
    }
}
else
{
    <ul class="navbar-nav ml-auto">
        <li class="nav-item">
            @Html.ActionLink("Вход", "Login", "Account", routeValues: null,
                 htmlAttributes: new { id = "login-link", @class = "nav-link active" })
        </li>
        <li class="nav-item">
            @Html.ActionLink("Регистрация", "Register", "Account", routeValues: null,
                 htmlAttributes: new { id = "register-link", @class = "nav-link" })
        </li>
    </ul>
}
