@using HwProj.Tools.Markdown
@model HwProj.Models.ViewModels.ReviewIndexViewModel

@foreach (var diffFile in Model.DiffFiles)
{
    //Тут должна быть табличка diff-ов
    //Хочу тут все обрабатывать:  заполнять ReviewCreateViewModel и отправлять на Review Create.
    <p>@diffFile.Name</p>
    <table class="diff-table">
        @foreach (var diffLine in diffFile.DiffLines)
        {
                <tr>
                    <td class="blob-num @diffLine.CssNumClass">@diffLine.Number</td>
                    <td class="blob-code @diffLine.CssCodeClass">@Html.Raw(diffLine.HasMarkdown ? diffLine.Line.AsMarkdown() : diffLine.Line)</td>
                </tr>
        }
    </table>
    <hr />
}